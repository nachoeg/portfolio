---
import Arrow from "../icons/ArrowUpRight.astro";
const {
  id,
  image,
  imagePosition,
  title,
  description,
  tags,
  projectUrl,
  class: className,
} = Astro.props;
import Tags from "./Tags.astro";
---

<article
  class=`group max-h-[600px] w-full relative rounded-3xl duration-300
  text-neutral-900 bg-black/5 hover:bg-neutral-200
  dark:text-white dark:bg-white/5 dark:hover:bg-white/10 ${className}`
  transition:name={`project${id}`}
>
  <div class="rounded-3xl p-2 sm:p-3">
    <a
      href={projectUrl}
      class="flex flex-col lg:flex-row justify-between relative"
    >
      <div
        class="order-2 lg:order-1 flex-shrink-0 lg:w-[500px] lg:h-[300px] lg:max-w-[500px] lg:max-h-[300px] rounded-2xl overflow-hidden"
      >
        <img
          alt={title}
          transition:name=`imageProject${id}`
          loading={"eager"}
          class=` ${imagePosition} object-cover h-full w-full  rounded-2xl transition duration-200 translate-y-0  hover-hover:group-hover:saturate-[1.25]  hover-hover:group-hover:scale-[1.03]`
          src={image}
        />
      </div>
      <div class="order-1 lg:order-2 flex flex-col">
        <div class="p-2 sm:p-3 mb-4 lg:ps-6 flex flex-col">
          <h1 class="text-xl sm:text-4xl font-bold">
            {title}
          </h1>
          <div
            class="text-gray-700 dark:text-gray-400 text-sm xs:text-base text-pretty lg:text-balance mt-3 lg:mb-0"
          >
            {description}
          </div>
          <Tags classList="mt-3" tags={tags} />
        </div>
        <div
          class="hidden lg:block opacity-0 group-hover:opacity-100 group-hover:scale-100 scale-0 transition-all duration-300 absolute bottom-2 right-2 bg-white dark:bg-neutral-900 p-4 rounded-full"
        >
          <div class="sr-only">Más información</div>
          <Arrow class="size-6" />
        </div>
      </div>
    </a>
  </div>
</article>
