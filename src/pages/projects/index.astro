---
import SectionContainer from "@/components/SectionContainer.astro";
import Layout from "@/layouts/Layout.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import { PROJECTS } from "@/data/projects.js";
import SectionTitle from "@/components/SectionTitle.astro";
---

<Layout title="Proyectos" description="Lista completa de proyectos">
  <main class="mx-4 pt-20 sm:pt-36">
    <SectionContainer>
      <SectionTitle class="animate-on-scroll">Todos mis proyectos</SectionTitle>

      <ol
        class="animate-on-scroll relative border-s border-neutral-200 dark:border-neutral-800"
      >
        {
          PROJECTS.map(
            ({
              id,
              image,
              imagePosition,
              title,
              description,
              tags,
              projectUrl,
              date,
            }) => (
              <li class="relative ms-4 mb-10 flex flex-col gap-4 ">
                <div class="xl:hidden absolute size-4 bg-neutral-200 rounded-full mt-2 -start-6 border border-neutral-50 dark:border-neutral-950 dark:bg-neutral-800" />
                <time class="xl:hidden mt-2 leading-none text-neutral-500 dark:text-neutral-600">
                  {date}
                </time>
                <div class="hidden xl:flex absolute h-full -start-2 -translate-x-full items-center gap-1">
                  <time class="leading-none text-neutral-500 dark:text-neutral-600 ">
                    {date}
                  </time>
                  <div class=" size-4 bg-neutral-200 rounded-full border border-neutral-50 dark:border-neutral-950 dark:bg-neutral-800" />
                </div>

                <ProjectCard
                  id={id}
                  image={image}
                  imagePosition={imagePosition}
                  title={title}
                  description={description}
                  tags={tags}
                  projectUrl={projectUrl}
                  class="animation-reveal-scroll"
                />
              </li>
            )
          )
        }
      </ol>
    </SectionContainer>
  </main>
</Layout>
